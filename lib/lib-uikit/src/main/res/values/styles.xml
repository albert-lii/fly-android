<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--通用Dialog-->
    <style name="fly_uikit_CommonDialog" parent="@android:style/Theme.Dialog">
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无背景 -->
        <item name="android:background">@null</item>
        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--通用的背景透明Dialog-->
    <style name="fly_uikit_TransparentDialog" parent="fly_uikit_CommonDialog">
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--从底部弹出动画-->
    <style name="fly_uikit_anim_InBottom_OutBottom">
        <item name="android:windowEnterAnimation">@anim/fly_uikit_bottom_popup_in</item>
        <item name="android:windowExitAnimation">@anim/fly_uikit_bottom_popup_out</item>
    </style>
</resources>