<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fly.mod.launcher">

    <application>
        <activity
            android:name="fly.mod.launcher.ui.MainActivity"
            android:screenOrientation="portrait"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fly.mod.launcher.ui.ArticleListActivity"
            android:screenOrientation="portrait"
            android:taskAffinity="" />

        <activity
            android:name="fly.mod.launcher.ui.ScanActivity"
            android:screenOrientation="portrait"
            android:taskAffinity="" />

        <activity
            android:name="fly.mod.launcher.ui.DownloadActivity"
            android:screenOrientation="portrait"
            android:taskAffinity="" />
    </application>
</manifest>